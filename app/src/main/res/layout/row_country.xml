<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardHeight"
    android:layout_marginLeft="@dimen/cardMargin"
    android:layout_marginTop="@dimen/cardMargin"
    android:layout_marginRight="@dimen/cardMargin"
    android:clickable="true"
    android:elevation="@dimen/cardElevation"
    android:focusable="true"
    app:cardCornerRadius="@dimen/cardCornerRadius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flag"
            android:layout_width="@dimen/imageWidth"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/cardTextMargin"
            android:layout_toEndOf="@id/flag"
            android:gravity="start|center"
            android:textSize="@dimen/cardTextSize"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
